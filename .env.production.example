# Production Environment Configuration
# Copy this to .env on production server

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id-here.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret-here
GOOGLE_REDIRECT_URI=https://here.news/api/auth/callback

# JWT Configuration
JWT_SECRET_KEY=change-this-to-a-secure-random-key-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# Environment (IMPORTANT: Set to production)
ENVIRONMENT=production

# Database - Uses localhost in production (detected automatically)
# The services run on the same server, so localhost is used
DB_HOST=localhost
DB_PORT=5432
DB_USER=phi_user
DB_PASSWORD=phi_password_dev
DB_NAME=phi_here

# DATABASE_URL will be auto-constructed as: postgresql+asyncpg://phi_user:phi_password_dev@localhost:5432/phi_here

# App Configuration
BASE_PATH=
GATEWAY_URL=http://localhost:3000

# Neo4j Configuration - Uses localhost in production
# The services run on the same server, so localhost is used
NEO4J_HOST=localhost
NEO4J_BOLT_PORT=7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your-neo4j-password-here
NEO4J_DATABASE=neo4j

# NEO4J_URI will be auto-constructed as: bolt://localhost:7687

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
